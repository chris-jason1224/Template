<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--****RoundView系列属性 start-->
    <!-- 以下是重用attr的正确姿势,一切为了在布局中可以自动提示-->
    <!-- 圆角矩形背景色 -->
    <attr name="core_ui_rv_backgroundColor" format="color"/>
    <!-- 圆角矩形背景色press -->
    <attr name="core_ui_rv_backgroundPressColor" format="color"/>
    <!-- 圆角弧度,单位dp-->
    <attr name="core_ui_rv_cornerRadius" format="dimension"/>
    <!-- 圆角弧度,单位dp-->
    <attr name="core_ui_rv_strokeWidth" format="dimension"/>
    <!-- 圆角边框颜色-->
    <attr name="core_ui_rv_strokeColor" format="color"/>
    <!-- 圆角边框颜色press -->
    <attr name="core_ui_rv_strokePressColor" format="color"/>
    <!-- 文字颜色press-->
    <attr name="core_ui_rv_textPressColor" format="color"/>
    <!-- 圆角弧度是高度一半-->
    <attr name="core_ui_rv_isRadiusHalfHeight" format="boolean"/>
    <!-- 圆角矩形宽高相等,取较宽高中大值-->
    <attr name="core_ui_rv_isWidthHeightEqual" format="boolean"/>
    <!-- 圆角弧度,单位dp,TopLeft-->
    <attr name="core_ui_rv_cornerRadius_TL" format="dimension"/>
    <!-- 圆角弧度,单位dp,TopRight-->
    <attr name="core_ui_rv_cornerRadius_TR" format="dimension"/>
    <!-- 圆角弧度,单位dp,BottomLeft-->
    <attr name="core_ui_rv_cornerRadius_BL" format="dimension"/>
    <!-- 圆角弧度,单位dp,BottomRight-->
    <attr name="core_ui_rv_cornerRadius_BR" format="dimension"/>
    <!-- 是否有Ripple效果,api21+有效-->
    <attr name="core_ui_rv_isRippleEnable" format="boolean"/>

    <!--Android studio自定义的属性名必须和java类的名字一直才能自动提示属性-->
    <declare-styleable name="core_ui_RoundTextView">
        <attr name="core_ui_rv_backgroundColor"/>
        <attr name="core_ui_rv_backgroundPressColor"/>
        <attr name="core_ui_rv_cornerRadius"/>
        <attr name="core_ui_rv_strokeWidth"/>
        <attr name="core_ui_rv_strokeColor"/>
        <attr name="core_ui_rv_strokePressColor"/>
        <attr name="core_ui_rv_textPressColor"/>
        <attr name="core_ui_rv_isRadiusHalfHeight"/>
        <attr name="core_ui_rv_isWidthHeightEqual"/>
        <attr name="core_ui_rv_cornerRadius_TL"/>
        <attr name="core_ui_rv_cornerRadius_TR"/>
        <attr name="core_ui_rv_cornerRadius_BL"/>
        <attr name="core_ui_rv_cornerRadius_BR"/>
        <attr name="core_ui_rv_isRippleEnable"/>
    </declare-styleable>

    <declare-styleable name="core_ui_RoundLinearLayout">
        <attr name="core_ui_rv_backgroundColor"/>
        <attr name="core_ui_rv_backgroundPressColor"/>
        <attr name="core_ui_rv_cornerRadius"/>
        <attr name="core_ui_rv_strokeWidth"/>
        <attr name="core_ui_rv_strokeColor"/>
        <attr name="core_ui_rv_strokePressColor"/>
        <attr name="core_ui_rv_isRadiusHalfHeight"/>
        <attr name="core_ui_rv_isWidthHeightEqual"/>
        <attr name="core_ui_rv_cornerRadius_TL"/>
        <attr name="core_ui_rv_cornerRadius_TR"/>
        <attr name="core_ui_rv_cornerRadius_BL"/>
        <attr name="core_ui_rv_cornerRadius_BR"/>
        <attr name="core_ui_rv_isRippleEnable"/>
    </declare-styleable>

    <declare-styleable name="core_ui_RoundRelativeLayout">
        <attr name="core_ui_rv_backgroundColor"/>
        <attr name="core_ui_rv_backgroundPressColor"/>
        <attr name="core_ui_rv_cornerRadius"/>
        <attr name="core_ui_rv_strokeWidth"/>
        <attr name="core_ui_rv_strokeColor"/>
        <attr name="core_ui_rv_strokePressColor"/>
        <attr name="core_ui_rv_isRadiusHalfHeight"/>
        <attr name="core_ui_rv_isWidthHeightEqual"/>
        <attr name="core_ui_rv_cornerRadius_TL"/>
        <attr name="core_ui_rv_cornerRadius_TR"/>
        <attr name="core_ui_rv_cornerRadius_BL"/>
        <attr name="core_ui_rv_cornerRadius_BR"/>
        <attr name="core_ui_rv_isRippleEnable"/>
    </declare-styleable>

    <declare-styleable name="core_ui_RoundFrameLayout">
        <attr name="core_ui_rv_backgroundColor"/>
        <attr name="core_ui_rv_backgroundPressColor"/>
        <attr name="core_ui_rv_cornerRadius"/>
        <attr name="core_ui_rv_strokeWidth"/>
        <attr name="core_ui_rv_strokeColor"/>
        <attr name="core_ui_rv_strokePressColor"/>
        <attr name="core_ui_rv_isRadiusHalfHeight"/>
        <attr name="core_ui_rv_isWidthHeightEqual"/>
        <attr name="core_ui_rv_cornerRadius_TL"/>
        <attr name="core_ui_rv_cornerRadius_TR"/>
        <attr name="core_ui_rv_cornerRadius_BL"/>
        <attr name="core_ui_rv_cornerRadius_BR"/>
        <attr name="core_ui_rv_isRippleEnable"/>
    </declare-styleable>

    <!--****RoundView系列属性 end-->


    <declare-styleable name="core_ui_CircleImageView">
        <attr name="core_ui_civ_border_width" format="dimension" />
        <attr name="core_ui_civ_border_color" format="color" />
        <attr name="core_ui_civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="core_ui_civ_fill_color" format="color" />
        <attr name="core_ui_civ_circle_background_color" format="color" />
    </declare-styleable>

    <style name="core_ui_common_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>