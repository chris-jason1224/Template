<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="share_login_pop_animation">
        <item name="android:windowEnterAnimation">@anim/share_login_pop_view_enter_anim</item>
        <item name="android:windowHideAnimation">@anim/share_login_pop_view_hide_anim</item>
    </style>

    <style name="share_login_full_width_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/share_login_pop_animation</item>

    </style>






</resources>